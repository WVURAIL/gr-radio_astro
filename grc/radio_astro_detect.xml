<?xml version="1.0"?>
<block>
  <name>detect</name>
  <key>radio_astro_detect</key>
  <category>[radio_astro]</category>
  <import>import radio_astro</import>
  <make>radio_astro.detect($vec_length, $dms, $f_obs, $bw, $t_int, $mode)</make>
  <callback>set_dms( $dms)</callback>
  <callback>set_vlen( $vec_length)</callback>
  <callback>set_bw( $bw)</callback>
  <callback>set_freq( $f_obs)</callback>
  <callback>set_mode( $mode)</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>vec_length</name>
    <key>vec_length</key>
    <type>int</type>
  </param>
  <param>
    <name>N Simga</name>
    <key>dms</key>
    <type>float</type>
  </param>
  <param>
    <name>f_obs</name>
    <key>f_obs</key>
    <type>float</type>
  </param>
  <param>
    <name>bw (MHz)</name>
    <key>bw</key>
    <type>float</type>
  </param>
  <param>
    <name>t_int</name>
    <key>t_int</key>
    <type>float</type>
  </param>
  <param>
    <name>Mode</name>
    <key>mode</key>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$vec_length</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$vec_length</vlen>
  </source>
</block>

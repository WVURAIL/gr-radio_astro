<?xml version="1.0"?>
<block>
  <name>Pulse_detection</name>
  <key>radio_astro_Pulse_detection</key>
  <category>[radio_astro]</category>
  <import>import radio_astro</import>
  <make>radio_astro.Pulse_detection($pac_size, $pw, $nt, $dms)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>pac_size</name>
    <key>pac_size</key>
    <type>int</type>
  </param>

  <param>
    <name>pw</name>
    <key>pw</key>
    <type>float</type>
  </param>

  <param>
    <name>nt</name>
    <key>nt</key>
    <type>int</type>
  </param>

  <param>
    <name>dms</name>
    <key>dms</key>
    <type>float_vector</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  

  <sink>
    <name>in0</name>
    <type>float</type>
    <vlen>len($dms)*$nt</vlen>
  </sink>
  
  
  <sink>
    <name>in1</name>
    <type>float</type>
    <vlen>len($dms)*$nt</vlen>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type><!-- e.g. int, float, complex, byte, short, xxx_vector, ...--></type>
  </source>
</block>

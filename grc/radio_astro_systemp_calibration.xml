<?xml version="1.0"?>
<block>
  <name>systemp_calibration</name>
  <key>radio_astro_systemp_calibration</key>
  <category>[radio_astro]</category>
  <import>import radio_astro</import>
  <make>radio_astro.systemp_calibration($vec_length, $collect, $samp_rate, $freq, $prefix, $spectrumcapture_toggle)</make>

  <callback>set_collect($collect)</callback>
  <callback>set_spectrumcapture_toggle($spectrumcapture_toggle)</callback>
  
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>vec_length</name>
    <key>vec_length</key>
    <type>int</type>
  </param>

  <param>
    <name>collect</name>
    <key>collect</key>
    <type>string</type>
  </param>

  <param>
    <name>samp_rate</name>
    <key>samp_rate</key>
    <type>float</type>
  </param>

  <param>
    <name>freq</name>
    <key>freq</key>
    <type>float</type>
  </param>

  <param>
    <name>prefix</name>
    <key>prefix</key>
    <type>string</type>
  </param>

  <param>
    <name>spectrumcapture_toggle</name>
    <key>spectrumcapture_toggle</key>
    <type>bool</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
    <vlen>$vec_length</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>spectrum</name>
    <type>float</type>
    <vlen>$vec_length</vlen>
  </source>

  <source>
    <name>gain</name>
    <type>float</type>
    <vlen>$vec_length</vlen>
  </source>

  <source>
    <name>tsys</name>
    <type>float</type>
    <vlen>$vec_length</vlen>
  </source>
</block>
